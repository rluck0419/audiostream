<!DOCTYPE html>
<html>
  <head>
    <title>Audiostream</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <%= javascript_include_tag 'https://code.createjs.com/easeljs-0.8.2.min.js', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://code.createjs.com/tweenjs-0.6.2.min.js', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script>App.user = <%= (current_user.to_json || {}).html_safe %></script>
  </head>

  <body>
    <%= render "shared/nav.html.erb", user: @user %>
    <%= yield %>
  </body>
</html>
